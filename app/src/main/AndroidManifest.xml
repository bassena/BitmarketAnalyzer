<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="b51.heritage.ca.bitmarketanalyzer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CurrenciesActivity"
            android:label="@string/title_activity_currencies" >
        </activity>
        <activity
            android:name=".LatestTransactionsActivity"
            android:label="@string/title_activity_latest_transactions" >
        </activity>
        <activity
            android:name=".ChartsMainActivity"
            android:label="@string/title_activity_charts_main" >
        </activity>
        <activity
            android:name=".FillChartActivity"
            android:label="@string/title_activity_fill_chart" >
        </activity>
    </application>

</manifest>
